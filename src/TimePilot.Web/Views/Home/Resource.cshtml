                                </td>
                                <td>
                                    @Html.CheckBoxFor(m => m.sprints[i].members[j].isSelectedToDelete)
                                    @Html.HiddenFor(m => m.sprints[i].members[j].isSelectedToDelete)
                                </td>
                            </tr>
                        }
